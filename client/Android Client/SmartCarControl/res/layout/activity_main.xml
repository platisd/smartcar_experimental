<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/videoView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@android:drawable/screen_background_dark"
        android:scaleType="fitXY" />
    
   	 <se.chalmers.balmung.smartcar.CameraJoystickView
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:id="@+id/cameraJoystickView"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:layout_marginLeft="20dp" />
    
      <se.chalmers.balmung.smartcar.JoystickView
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:id="@+id/joystickView"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:layout_marginRight="20dp" />

      <ImageView
          android:id="@+id/centreCamera"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentBottom="true"
          android:src="@android:drawable/ic_menu_add"
          android:onClick="onCameraCentre" />

      <ImageView
          android:id="@+id/takePicture"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:src="@android:drawable/ic_menu_camera"
          android:onClick="onTakePicture" />

</RelativeLayout>